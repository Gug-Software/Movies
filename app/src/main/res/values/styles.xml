<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorSurface">@color/secondaryColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
    </style>

    <style name="PrimaryToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="MoviesDetailToolbarText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
